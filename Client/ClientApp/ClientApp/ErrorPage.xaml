<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientApp.ErrorPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">
            <Frame Margin="24,28,24,0" VerticalOptions="CenterAndExpand" BackgroundColor ="#262424">
                <Label Text="{Binding ErrorMessageDisplay}"
                Margin="25,0,10,0"
                FontSize="Large"
                TextColor="White"
                FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            </Frame>
           

            <ImageButton Source="tryagain_button.png"
               HeightRequest="60"
               BackgroundColor="Black"
               VerticalOptions="StartAndExpand"
               Clicked="MainPage_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>